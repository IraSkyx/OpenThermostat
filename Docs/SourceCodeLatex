\begin{frame}{\underline{\textbf{B - 1) Objectifs :}}}
  \begin{itemize}
  \item {
    Analyser quelques patrons de conception et de sécurité.
  }
  \item {
    Implémenter un/des patron(s) de conception.
  }
  \item {
    Implémenter un/des patron(s) de sécurité.
  }
  
  \item {
    Analyser la sécurité avec des éléments de test de pénétration.
  }
  \end{itemize}
\end{frame}

% You can reveal the parts of a slide one at a time
% with the \pause command:
\begin{frame}{\underline{\textbf{B - 2)  Produit :}}}
  \begin{itemize}
  \item {
    \textbf{Analyse de sécurité.}
  }
    \item {
    \textbf{Code d'un objet mis à jour.}
  }
    \item {
    \textbf{Plateforme I.O.T (+ MAJ) qui inclut des patrons.}
  }
  \end{itemize}
\end{frame}



\begin{frame}{\underline{\textbf{B - 2) - a)  Analyse de sécurité :}}}
  \begin{itemize}
  \item {
    Analyse et mise en place des patrons de sécurité si besoin. \linebreak
    Penetration testing à plusieurs niveaux à l'aide de ZAP Proxy ou JohnTheRipper. \linebreak
    Implémentation des corrections.
    }
  \end{itemize}
\end{frame}

\begin{frame}{\underline{\textbf{B - 2) - b)  Code d'un objet mis à jour :}}}
  \begin{itemize}
  \item {
    Mise à jour du projet incluant l'implémentation de correction des défauts observés par le biais de patrons de conception, de sécurité ainsi que l'optimisation potentielle du code existant.
    }
  \end{itemize}
\end{frame}

\begin{frame}{\underline{\textbf{B - 2) - c)  Plateforme
I.O.T}}}
  \begin{itemize}
  \item {
    Implémentation des solutions dans le but de connecter des objets, des machines, etc.. \linebreak
    Analyse des fonctionnalités, les APIs disponibles. 
  }
  \end{itemize}
\end{frame}


\begin{frame}{\underline{\textbf{B - 3)  Critères d'acceptabilité et de réception :}}}
  \begin{itemize}
    \item {
    Le produit doit comprendre moins de vulnérabilités.
  }
  \item {
    Le code doit être amélioré dans sa conception. 
  }
  \item {
    Patrons de conception et de sécurité intégrés. 
  }
  \item {
    Sécurité améliorée et renforcée. 
  }
  \item {
    3 patrons étudiés par personne au minimum. 
  }
  
      \end{itemize}
\end{frame}

\begin{frame}{\underline{\textbf{C - Contraintes :}}}
  \begin{itemize}

    \item {
    \underline{\textbf{1- Contraintes de coûts :}} \linebreak
    - Ordinateurs mis à disposition (0\texteuro) \linebreak
    - Ressources humaines (5 étudiants) \linebreak
    - Arduino ESP8266 (5\texteuro) \linebreak
    - Capteur IR (1\texteuro) \linebreak
    - Boitier imprimé 3D (0,50\texteuro) \linebreak
    - Budget : (7\texteuro)
  }

  \item {
    \underline{\textbf{2- Contrainte de délais :}} \linebreak 
        Livraison finale du projet : 5 Mars 2018 (3 semaines avant la soutenance finale).\linebreak
        Livraison du projet à mi-période (avant la soutenance) et soutenance intermédiaire : 15 Janvier 2018.
  }

      \end{itemize}
\end{frame}

\begin{frame}{\underline{\textbf{D - Déroulement du projet :}}}
  \begin{itemize}
    \item {
    \underline{\textbf{1- Planification :}} \linebreak
    - Diagrammes : UseCase, Classes, Séquence. \linebreak
    - Analyse code + sécurité. \linebreak
    - Extraction framework ? \linebreak
    - Analyse défauts conception ? patrons ? autre ? \linebreak 
    - Outils de pénétration + tests (ZAP Proxy)
    - Corriger les patrons.
    
  }
  \item {
    \underline{\textbf{2- Ressources :}} \linebreak
        \underline{Ressources humaines :} \linebreak
            - 5 étudiants \linebreak
            - 1 encadrant
            
        \underline{Ressources matérielles :} \linebreak
            - Cartes WEMOS D1 mini Pro: Base ESP-8266EX \linebreak
            - Différents capteurs, PC et AP Wifi
  }
  
      \end{itemize}
\end{frame}



